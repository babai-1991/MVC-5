
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form action=@Url.Action("Create","Products") method="post">
    <div class="form-group">
        <label>Product Id</label>
        <input type="text" placeholder="Enter Product ID" class="form-control" name="ProductId" />
    </div>
    <div class="form-group">
        <label>Product Name</label>
        <input type="text" placeholder="Enter Product name" class="form-control" name="ProductName" />
    </div>
    <div class="form-group">
        <label>Product Rate</label>
        <input type="text" placeholder="Enter Product Price" class="form-control" name="Rate" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>